<ul>
    <% cartList.forEach((listElem)=>{ %>

    <li><%= listElem.name %> <%= listElem.price %> <a href= /cart/<%= listElem._id %> class="delete"
            data-doc="<%= listElem._id%>">Delete</a></li>
    <% }) %>
</ul>






<script>
    const trash = document.querySelector('a.delete');
    trash.addEventListener('click', () => {
        const endpoint = `/cart/${trash.dataset.doc}`
        fetch(endpoint, {
                method: "DELETE",
                headers: {
                    'Content-type': 'application/json'
                },
                body: null

            }.then((res) => res.json())
            .then((data) => console.log(data))
            .catch((err) => {
                console.log(err)
            }))
    })
</script>